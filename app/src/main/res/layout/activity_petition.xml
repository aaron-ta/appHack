<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetitionActivity"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F0F0ED">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />

                <ImageView
                    android:id="@+id/bgImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/login_bg" />

                <ImageView
                    android:id="@+id/iconImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/bgImageView"
                    android:layout_alignStart="@+id/bgImageView"
                    android:layout_alignLeft="@+id/bgImageView"
                    android:layout_marginStart="28dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="197dp"
                    app:srcCompat="@drawable/user_ico" />


                <TextView
                    android:id="@+id/userTextView"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iconImageView"
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/iconImageView"
                    android:layout_toRightOf="@+id/iconImageView"
                    android:ems="16"
                    android:paddingLeft="5dp"
                    android:text="Municipio, Estado"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/userTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleTextView"
                    android:layout_alignEnd="@+id/view_pager"
                    android:layout_alignRight="@+id/view_pager"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:ems="16"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Este proyecto ayuda a xxx personas"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clinicTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iconImageView"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="23dp"
                    android:layout_toEndOf="@+id/iconImageView"
                    android:layout_toRightOf="@+id/iconImageView"
                    android:ems="10"
                    android:paddingLeft="4dp"
                    android:text="Clinica"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/scoreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progressBar"
                    android:layout_alignBottom="@+id/iconImageView"
                    android:layout_marginStart="-102dp"
                    android:layout_marginLeft="-102dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="109dp"
                    android:layout_toEndOf="@+id/iconImageView"
                    android:layout_toRightOf="@+id/iconImageView"
                    android:paddingLeft="7dp"
                    android:text="XXXX MXN de XXXX MXN recaudados"
                    android:textColor="#000000" />


                <TextView
                    android:id="@+id/scoreTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iconImageView"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="1dp"
                    android:layout_toEndOf="@+id/iconImageView"
                    android:layout_toRightOf="@+id/iconImageView"
                    android:paddingLeft="7dp"
                    android:text="Dr. XXXXXXXXXXX"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_pager"
                    android:layout_alignStart="@+id/bgImageView"
                    android:layout_alignLeft="@+id/bgImageView"
                    android:layout_alignEnd="@+id/bgImageView"
                    android:layout_alignRight="@+id/bgImageView"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="66dp"
                    android:layout_marginEnd="12dp"
                    android:ems="10"
                    android:gravity="center"
                    android:text="Titulo de Peticion"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_below="@+id/iconImageView"
                    android:layout_alignStart="@+id/bgImageView"
                    android:layout_alignLeft="@+id/bgImageView"
                    android:layout_alignEnd="@+id/bgImageView"
                    android:layout_alignRight="@+id/bgImageView"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="-97dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/list_1" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_below="@+id/donateImageView"
                    android:layout_alignStart="@+id/bgImageView"
                    android:layout_alignLeft="@+id/bgImageView"
                    android:layout_alignEnd="@+id/bgImageView"
                    android:layout_alignRight="@+id/bgImageView"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="9dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/list_1" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userTextView2"
                    android:layout_alignStart="@+id/bgImageView"
                    android:layout_alignLeft="@+id/bgImageView"
                    android:layout_alignEnd="@+id/bgImageView"
                    android:layout_alignRight="@+id/bgImageView"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="18dp"
                    android:progress="25"
                    android:scaleY="8"
                    android:startColor="#000000" />

                <TextView
                    android:id="@+id/bodyTextView"
                    android:layout_width="480dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iconImageView"
                    android:layout_alignStart="@+id/bgImageView"
                    android:layout_alignLeft="@+id/bgImageView"
                    android:layout_alignEnd="@+id/bgImageView"
                    android:layout_alignRight="@+id/bgImageView"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:text="x \n "

                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/donateImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bodyTextView"
                    android:layout_alignStart="@+id/bodyTextView"
                    android:layout_alignLeft="@+id/bodyTextView"
                    android:layout_alignEnd="@+id/bodyTextView"
                    android:layout_alignRight="@+id/bodyTextView"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="55dp"
                    android:layout_marginRight="55dp"
                    app:srcCompat="@drawable/rounded_rectangle_1" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/donateImageView"
                    android:layout_alignLeft="@+id/donateImageView"
                    android:layout_alignTop="@+id/donateImageView"
                    android:layout_alignEnd="@+id/donateImageView"
                    android:layout_alignRight="@+id/donateImageView"
                    android:layout_alignBottom="@+id/donateImageView"
                    android:layout_marginStart="78dp"
                    android:layout_marginLeft="78dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="79dp"
                    android:layout_marginRight="79dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/donar" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">
                android:layout_marginTop="64dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listViewIt"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="19dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>

