<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/borderU"
        android:layout_width="288.7dp"
        android:layout_height="49.3dp"
        android:layout_alignStart="@+id/imageView13"
        android:layout_alignLeft="@+id/imageView13"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="381dp"
        app:srcCompat="@drawable/rounded_rectangle_p" />

    <ImageView
        android:id="@+id/borderU2"
        android:layout_width="288.7dp"
        android:layout_height="49.3dp"
        android:layout_alignBottom="@+id/editPass"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/rounded_rectangle_p" />


    <ImageButton
        android:id="@+id/Boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borderU2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="147dp"
        android:background="@null"
        android:onClick="buttonPress"
        app:srcCompat="@drawable/rounded_rectangle_1" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="174dp"
        app:srcCompat="@drawable/iniciar_sesion" />

    <ImageView
        android:id="@+id/logoV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:visibility="invisible"
        app:srcCompat="@mipmap/ic_launcher" />


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_bg" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView13"
        android:layout_alignLeft="@+id/imageView13"
        android:layout_alignEnd="@+id/imageView13"
        android:layout_alignRight="@+id/imageView13"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editMail"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/editPass"
        android:src="@drawable/correo" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView12"
        android:layout_alignTop="@+id/borderU2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="252dp"
        android:src="@drawable/pass_ico" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView12"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="238dp"
        android:ems="10"
        android:hint="contraseÃ±a"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editMail"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/borderU"
        android:layout_alignEnd="@+id/imageView12"
        android:ems="10"
        android:hint="correo electronico"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        android:src="@drawable/linea_separador" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:onClick="callRegistro"
        app:srcCompat="@drawable/no_tienes_una_cuenta_reg_strate" />


</RelativeLayout>